<div class="col-sm-12">
  <%= form_for(status, remote: true) do |f| %>
    <div class="col-sm-3 form-group">
      <%= f.text_field :label, class: "form-control" %>
    </div><!-- col-sm-3 form-group -->
    <div class="col-sm-3 form-group">
      <%= f.text_field :code, class: "form-control", readonly: true %>
    </div><!-- col-sm-3 form-group -->
    <div class="col-sm-3 form-group">
      <%= f.collection_select(:status_type, @status_types, :code, :label, {selected: status.type, disabled: [:undefined]}, {class: "form-control select2", style: "width: 100%;"}) %>
    </div><!-- col-sm-3 form-group -->
    <div class="col-sm-2 form-group">
      <%= f.submit "Atualizar", class: "btn btn-primary hide" %>
    </div><!-- col-sm-2 form-group -->
  <% end %>
</div><!-- col-sm-12 -->