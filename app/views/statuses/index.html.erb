<% provide(:title, 'Status') %>
<% provide(:header, "Status dos pedidos") %>
<% provide(:description, "Lista de todos os status.") %>
<% provide(:levels, 'Status') %>

<div class="box box-primary"> <!-- add class collapsed-box for collapsed box-->
  <div class="box-header with-border">
    <h3 class="box-title">Criar um novo status</h3>
    <div class="box-tools pull-right">
      <%= button_tag(class: "btn btn-box-tool", "data-widget" => "collapse") do %>
        <%= fa_icon("minus") %>
      <% end %>
    </div><!-- box-tools pull-right -->
  </div><!-- box-header with-border -->

  <div class="box-body">
    <div class="col-sm-12">
      <div class="col-sm-3 form-group">
        <%= label_tag :label, "Nome" %>
      </div><!-- col-sm-3 form-group -->
      <div class="col-sm-3 form-group">
        <%= label_tag :code, "Código" %>
      </div><!-- col-sm-3 form-group -->
      <div class="col-sm-3 form-group">
        <%= label_tag :status_type, "Tipo do status" %>
      </div><!-- col-sm-3 form-group -->
    </div><!-- col-sm-12 -->
    <div class="col-sm-12">
      <%= render partial: "new_status", locals: { new_status: @new_status } %>
    </div><!-- col-sm-12 -->
  </div><!-- box-body -->
</div><!-- box box-primary -->

<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">Lista de Status</h3>
    <div class="box-tools pull-right">
      <%= button_tag(class: "btn btn-box-tool", "data-widget" => "collapse") do %>
        <%= fa_icon("minus") %>
      <% end %>
    </div><!-- box-tools pull-right -->
  </div><!-- box box-danger -->
  <div class="box-body">
    <div class="col-sm-12">
      <div class="col-sm-3 form-group">
        <%= label_tag :label, "Nome" %>
      </div><!-- col-sm-3 form-group -->
      <div class="col-sm-3 form-group">
        <%= label_tag :code, "Código" %>
      </div><!-- col-sm-3 form-group -->
      <div class="col-sm-3 form-group">
        <%= label_tag :status_type, "Tipo do status" %>
      </div><!-- col-sm-3 form-group -->
      <div class="col-sm-2 form-group">
        <%= button_tag( class: "btn btn-primary", id: "update_all_status") do %>
          <%= fa_icon("refresh", text: content_tag(:span, "Atualizar Status", 'button-text' => "Atualizar Status")) %>
        <% end %>
      </div><!-- col-sm-2 form-group -->
    </div><!-- col-sm-12 -->
    <div id="statuses">
        <%= render @statuses %>
    </div><!-- /#statuses -->
  </div><!-- /.box-body -->
</div><!-- /.box box-danger -->