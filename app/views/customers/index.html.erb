<% provide(:title, 'Clientes') %>
<% provide(:header, 'Clientes') %>
<% provide(:description, 'Lista de clientes.') %>
<% provide(:levels, 'Clientes') %>

<div class="row">
  <div class="col-sm-12">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title">Clientes</h3>
      </div><!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <div class="col-sm-12">
          <table data-link="row" class="table table-hover rowlink">
            <tr>
              <th>Nome</th>
              <th>Identificador</th>
              <th>Compras Realizadas</th>
              <th>Importado em:</th>
              <th>Atualizado em:</th>
              <th></th>
            </tr>
            <% @customers.each_with_index do |customer, index| %>
              <tr>
                <td><%= customer.name.capitalize %></td>
                <td><%= customer.remote_id || "Convidado" %></td>
                <td><%= customer.orders.count %></td>
                <td><%= time_tag customer.created_at %></td>
                <td><%= time_tag customer.updated_at %></td>
                <td class="rowlink-skip"><%= link_to fa_icon("search-plus", class: "fa-lg"), customer_path(customer) %></td>
              </tr>
            <% end %>
          </table>
        </div><!-- col-sm-12 -->
      </div><!-- /.box-body -->
      <div class="row">
        <div class="col-sm-12">
          <%= will_paginate @customers, class: 'backhere_pagination' %>
          <div class="backhere_page_info">
            <%= page_entries_info @customers %>
          </div><!-- backhere_page_info -->
        </div><!-- col-sm-12 -->
      </div><!-- row -->
    </div><!-- /.box -->
  </div><!-- col-sm-12 -->
</div><!-- row -->