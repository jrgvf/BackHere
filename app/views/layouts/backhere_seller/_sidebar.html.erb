<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= profile_image %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- search form (Optional) -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search..."/>
        <span class="input-group-btn">
          <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </form>
    <!-- /.search form -->
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">NAVEGAÇÃO</li>
      <li class="<%= root_active_class %> <%= active_class(dashboard_path) %>">
        <%= link_to '<i class="fa fa-dashboard"></i><span> Dashboard</span>'.html_safe, dashboard_path %>
      </li>
      <li class="<%= active_class(platforms_path) %>">
        <%= link_to '<i class="fa fa-laptop"></i><span> Plataformas</span>'.html_safe, platforms_path %>
      </li>

      <li><a href="#"><i class='fa fa-link'></i> <span>Another Link</span></a></li>
      <li class="treeview">
        <a href="#"><i class='fa fa-tasks'></i> <span>Tarefas</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
          <li><%= link_to 'Criar', new_task_path %></li>
          <li><a href="#">Histórico</a></li>
        </ul>
      </li>
    </ul>
    <!-- /.sidebar-menu -->
    <!-- Sidebar Footer -->
    <ul class="sidebar-footer hide">
      <li class="header center">
        <span class="fa-stack fa-lg">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-angle-double-down fa-stack-1x fa-inverse"></i>
        </span>
      </li>
    </ul>
    <!-- /.Sidebar Footer -->
  </section>
  <!-- /.sidebar -->
</aside>
