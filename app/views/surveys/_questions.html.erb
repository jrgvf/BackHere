<div class="col-md-6 col-sm-6 col-xs-12">
  <%= label_tag "Perguntas disponíveis:" %>
  <% if questions.empty? %>
    <% if Question.exists? %>
      <div class="center error-content">
        <% if survey.questions.empty? %>
          <h3><%= fa_icon("warning", class: "text-red") %></i> Não existem perguntas prontas.</h3>
          <p>Você deve marcar as perguntas como prontas antes.</p>
        <% else %>
          <h3><%= fa_icon("warning", class: "text-red") %></i> Todas as perguntas prontas já selecionadas.</h3>
          <p>Você deve marcar as outras perguntas como prontas antes.</p>
        <% end %>
      </div>
    <% else %>
      <div class="center error-content">
        <h3><%= fa_icon("warning", class: "text-red") %></i> Não existem perguntas cadastras.</h3>
        <p>Cadastre as perguntas antes.</p>
      </div>
    <% end %>
  <% else %>
    <div id="others_questions">
      <%= render "others_questions", questions: questions %>
    </div>
  <% end %>
</div>

<div class="col-md-6 col-sm-6 col-xs-12">
  <%= label_tag "Perguntas selecionadas:" %>
  <div id="surveyQuestions" class="list-group" style="overflow: scroll; height: 400px;">
    <% survey.questions.each do |question| %>
      <%= render "checked_question", question: question %>
    <% end %>
  </div>

  <div class="col-md-12 col-sm-12 col-xs-12">
    <%= button_tag(class: "btn btn-primary pull-right", id: "new_question") do %>
      <%= fa_icon("plus", text: content_tag(:span, "Adicionar nova pergunta")) %>
    <% end %>
  </div>
</div>