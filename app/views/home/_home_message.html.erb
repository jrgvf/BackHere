<%= form_for HomeMessage.new, url: home_message_path, remote: true, html: { id: "home_message", style: "display:inline;" } do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Digite o seu nome" %>
        <span class="input-group-addon information"><i class="fa fa-info"> Obrigatório</i></span>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "Digite o seu email" %>
        <span class="input-group-addon information"><i class="fa fa-info"> Obrigatório</i></span>
      </div>
      <div class="form-group">
        <%= f.text_field :fone, class: "form-control", placeholder: "Digite o seu Telefone com DDD" %>
        <span class="input-group-addon information"><i class="fa fa-info"> Não obrigatório.</i></span>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_area :message, class: "form-control", placeholder: "Qual a mensagem que você tem pra gente?" %>
        <span class="input-group-addon information"><i class="fa fa-info"> Obrigatório</i></span>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-lg-12 text-center">
        <div id="success"></div>
        <%= f.submit 'Envie sua Mensagem', class: "btn btn-default btn-xl wow tada" %>
    </div>
  </div>
<% end %>