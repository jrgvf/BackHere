<div class="nested-option">
  <div class="form-group">
    <%= f.label :text, option_label(f.object), class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <div class="input-group">
        <%= f.text_field :text, class: "form-control", placeholder: "Texto da opção" %>
        <span class="input-group-addon">
          <%= link_to_remove_association fa_icon("close", text: content_tag(:span, 'Excluir opção', class: "sr-only"), title: "Excluir opção", "aria-hidden" => "true"), f, { wrapper_class: "nested-option" } %>
        </span>
      </div>
    </div>
  </div>
</div>