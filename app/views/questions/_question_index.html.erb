<tr id="<%= question.id %>">
  <td><%= question.text %></td>
  <!-- <td class="autoShorten"><%#= word_wrap(question.text, line_width: 100).gsub("\n", "<br />").html_safe %></td> -->
  <td><%= question.translated_type %></td>
  <td class="col-sm-3 form-group">
    <%= select_tag(:services, options_for_select(question.tags.map(&:name), question.tags.map(&:name)), multiple: true, class: "form-control select2", disabled: true) %>
  </td>
  <td class="center">
    <div class="btn-group dropup">
      <button type="button" class="btn btn-primary btn-flat dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" <%= 'disabled="true"' if question.ready %>>
        Ações <span class="caret"></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><%= link_to fa_icon("check", text: "Marcar como pronta"), question_ready_path(question), method: :post, data: { confirm: "Não será possível fazer quaisquer alterações depois.<br />Você tem certeza que deseja marcar como pronta?"}, remote: true %></li>
        <li><%= link_to fa_icon("edit", text: "Editar"), edit_polymorphic_path(question) %></li>
        <li><%= link_to fa_icon("trash-o", text: "Excluir"), question, method: :delete, data: { confirm: "Você tem certeza que deseja excluir a pergunta?"}, remote: true %></li>
      </ul>
    </div>
  </td>
</tr>