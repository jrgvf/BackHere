<% provide(:title, 'Plataformas') %>
<% provide(:header, 'Plataformas') %>
<% provide(:description, 'Lista das plataformas cadastradas e cadastro de novas plataformas.') %>
<% provide(:levels, 'Plataformas') %>

<div class="box">
  <div class="box-header">
    <h3 class="box-title">Lista de plataformas</h3>

    <div style="float:right" class="btn-group">
      <button type="button" class="btn btn-primary btn-flat dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Cadastrar Plataforma <span class="caret"></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <%= render partial: "available_platform", collection: @available_platforms %>
      </ul>
    </div>

  </div><!-- /.box-header -->
  <div class="box-body table-responsive platform-table">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Plataforma</th>
          <th>Nome</th>
          <th>URL</th>
          <th>Vers√£o</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "platform", collection: @current_platforms %>
      </tbody>
    </table>
  </div><!-- /.box-body -->
</div><!-- /.box -->