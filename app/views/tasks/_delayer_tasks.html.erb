<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">Tarefas Agendadas</h3>
    <div class="box-tools pull-right">
      <%= button_tag(class: "btn btn-box-tool", "data-widget" => "collapse") do %>
        <%= fa_icon("minus") %>
      <% end %>
    </div><!-- box-tools pull-right -->
  </div><!-- box box-danger -->
  <div class="box-body table-responsive no-padding">
    <div class="col-sm-12">
      <table class="table table-hover">
        <tr>
          <th></th>
          <th>Plataformas</th>
          <th>Tarefa</th>
          <th>Intervalo</th>
          <th>Duração</th>
          <th>Dias</th>
          <th></th>
        </tr>
        <% @delayer_tasks.each_with_index do |delayer_task, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= delayer_task.platforms_name %></td>
            <td><%= delayer_task.task_name %></td>
            <td><%= delayer_task.interval_name %></td>
            <td><%= delayer_task.time_range %></td>
            <td><%= delayer_task.days_range %></td>
            <td><%= link_to fa_icon("trash", class: "fa-lg"), delete_delayer_tasks_path(delayer_task), method: :delete %></td>
          </tr>
        <% end %>
      </table>
    </div><!-- col-sm-12 -->
  </div><!-- /.box-body -->

</div><!-- /.box box-danger -->